# cd aliases
alias dv="cd ~/dev"
alias lrn="cd ~/learn"
alias qt="cd ~/Qt"
alias njs="cd ~/Applications/n"
alias brw="cd /usr/local/Cellar"
alias map="cd ~/Applications"
alias nvc="cd ~/.config/nvim"
alias nvs="cd ~/.local/share/nvim"
alias zsh="cd  ~/.config/zsh"
alias dot="cd ~/.dotfiles"
alias cf="cd ~/.config"

# git aliases
alias gst="git status"
alias ga="git add"
alias gc="git commit -m"
alias gca='git commit -am'
alias gcam='git commit --amend'
alias gps="git push"
alias gpl="git pull"
alias gls="git log --stat" # generate a diffstat history (insertions/deletions/modifications) per file 
alias glp="git log -p --" # generate a patch history per file
alias gr="git reset HEAD~"  # undo the most recent commit
alias gd="git diff"

# shell aliases
alias l="eza --color=always --long --git --git-ignore --no-filesize --icons=always --no-time --no-user --no-permissions"
alias ll="eza --color=always --long --all --git --icons=always"
alias cd="z"
alias cl="clear"
alias tr="trash"
alias rm="echo 'Use trash instead'"

# launch aliases
alias nv="nvim"
alias pip="pip3"
eval $(thefuck --alias fk)
alias tm="tmux"
